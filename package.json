{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "parcel ./example/index.html",
    "start:tokens": "npm-run-all --parallel start build:tokens",
    "start:elements": "npm-run-all --parallel start build-w:elements",
    "build:tokens": "lerna run build --scope=@tealeaf/tokens",
    "build:elements": "lerna run build --scope=@tealeaf/elements",
    "build-w:elements": "lerna run build:watch --scope=@tealeaf/elements",
    "build:css": "lerna run build --scope=@tealeaf/css",
    "test:all": "lerna run test",
    "test:tokens": "lerna run test --scope=@tealeaf/tokens",
    "test:css": "lerna run test --scope=@tealeaf/css",
    "test:reset": "lerna run test --scope=@tealeaf/elements",
    "test:ui": "lerna run test --scope=@tealeaf/components",
    "bootstrap": "lerna exec -- npm link",
    "link-packages": "npm link @tealeaf/tokens && npm link @tealeaf/elements && npm link @tealeaf/css && npm link @tealeaf/ui",
    "bootstrap:init": "npm-run-all bootstrap link-packages"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {}
}
