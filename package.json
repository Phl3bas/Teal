{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "parcel ./example/index.html",
    "start:core": "npm-run-all --parallel start build:core",
    "start:element": "npm-run-all --parallel start build-w:element",
    "build:core": "lerna run build --scope=@teal/core",
    "build:element": "lerna run build --scope=@teal/element",
    "build-w:element": "lerna run build:watch --scope=@teal/element",
    "test:all": "lerna run test",
    "test:core": "lerna run test --scope=@teal/core",
    "test:css": "lerna run test --scope=@teal/css",
    "test:reset": "lerna run test --scope=@teal/element",
    "test:ui": "lerna run test --scope=@teal/ui",
    "bootstrap": "lerna exec -- npm link",
    "link-packages": "npm link @teal/core && npm link @teal/element && npm link @teal/css && npm link @teal/ui",
    "bootstrap:init": "npm-run-all bootstrap link-packages"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4"
  }
}
